{
  "name": "crypto-backend",
  "version": "1.0.0",
  "description": "WebSocket server for real-time crypto data",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "gen-schema": "flatc --ts -o src/generated src/schemas/crypto.fbs --ts-no-import-ext",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["websocket", "crypto", "flatbuffers"],
  "author": "Haaziq Uvais",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "flatbuffers": "^25.9.23",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
